<h1>Add a new user</h1>
<hr>

<% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |error_msg| %>
      <li><%= error_msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %>
  <br></br>
  <%= f.label :email %><br>
  <%= f.text_area :email  %>
  <br><br>
  <%= f.button %>
  <% end %>
<br>

<a href="/users">Back to users list ></a>
